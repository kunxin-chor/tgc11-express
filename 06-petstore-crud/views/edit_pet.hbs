{{#extends 'base'}}

{{#block 'content'}}
<h1>Editing {{petToEdit.name}} </h1>
<form method="POST">
    <div>
        <label class="form-label">Pet's Name</label>
        <input type="text" name="petName" class="form-control" value="{{petToEdit.name}}"/>
    </div>
    <div>
        <label class="form-label">Pet's category</label>
        <input type="text" name="petCategory" class="form-control" value="{{petToEdit.category.name}}">
    </div>
    <input type="submit" class="mt-3 btn btn-primary"/>
</form>
{{/block}}

{{/extends}}