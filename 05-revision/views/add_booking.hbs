{{#extends 'base'}}

{{#block 'content'}}
<form method="POST">
    <div>
        <label class="form-label">Email address</label>
        <input type="text" class="form-control" name="email" placeholder="Please enter your email address" />
    </div>

    <div>
        <label class="form-label">Type of seating</label>
        <div>
            <div class='form-check'>
                <input type="radio" class="form-check-input" name="seating" value="smoking" />
                <label class="form-check-label">Smoking</label>
            </div>
            <div class='form-check'>
                <input type="radio" class="form-check-input" name="seating" value="private-room" />
                <label class="form-check-label">Private room</label>
            </div>
            <div class='form-check'>
                <input type="radio" class="form-check-input" name="seating" value="normal" />
                <label class="form-check-label">Normal seating</label>
            </div>

        </div>

    </div>



    <input type="submit" class="mt-3" />
</form>

{{/block}}

{{/extends}}